<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditTaskActivity">

    <TextView
            android:id="@+id/taskName_EditTaskTextView"
            android:text="@string/new_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/taskName_EditTaskEditText"
            app:layout_constraintBottom_toBottomOf="@+id/taskName_EditTaskEditText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/taskName_EditTaskEditText"
            app:layout_constraintStart_toEndOf="@+id/taskName_EditTaskTextView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/new_task_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskCategory_EditTaskTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:paddingLeft="2dp"
            app:layout_constraintTop_toTopOf="@+id/taskCategory_EditTaskRadioGroup"
            app:layout_constraintBottom_toBottomOf="@+id/taskCategory_EditTaskRadioGroup"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout_EditTask" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/taskName_EditTaskEditText">
        <TextView
                android:text="@string/new_task_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/taskDate_EditTaskTextView"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingLeft="2dp"/>
        <TextView
                android:text="@string/new_task_date_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/dateChoosen_EditTaskTextView"
                android:layout_weight="1"
                android:textSize="22sp"/>
        <Button
                android:text="@string/new_task_date_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editDate_EditTaskButton"
                android:layout_weight="1"
                android:paddingLeft="2dp"/>
    </LinearLayout>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/taskCategory_EditTaskTextView"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/taskCategory_EditTaskRadioGroup"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout_EditTask">
        <RadioButton
                android:text="@string/category_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryWork_EditTaskRadioButton"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/category_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryShopping_EditTaskRadioButton"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/category_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryOther_EditTaskRadioButton"
                android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="@string/edit_task_edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTask_EditTaskButton"
            app:layout_constraintBottom_toTopOf="@+id/deleteTask_EditTaskButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/edit_task_delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/deleteTask_EditTaskButton"
            app:layout_constraintBottom_toTopOf="@+id/cancel_EditTaskButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/new_task_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_EditTaskButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>