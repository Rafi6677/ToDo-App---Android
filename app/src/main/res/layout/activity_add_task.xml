<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddTaskActivity">

    <TextView
            android:text="@string/new_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskDate_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/taskDate_EditText"
            app:layout_constraintBottom_toBottomOf="@+id/taskDate_EditText"/>
    <TextView
            android:text="@string/new_task_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskCategory_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/radioGroup"
            app:layout_constraintBottom_toBottomOf="@+id/radioGroup"/>
    <TextView
            android:text="@string/new_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskName_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="20sp" app:layout_constraintTop_toTopOf="@+id/taskName_EditText"
            app:layout_constraintBottom_toBottomOf="@+id/taskName_EditText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/taskName_EditText"
            app:layout_constraintStart_toEndOf="@+id/taskName_TextView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/new_task_name_hint"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/taskDate_EditText"
            android:textSize="20sp"
            android:hint="@string/new_task_date_hint"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/taskName_EditText"
            app:layout_constraintStart_toEndOf="@+id/taskDate_TextView" android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/taskDate_EditText"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/taskCategory_TextView"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/radioGroup">
        <RadioButton
                android:text="@string/category_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryWork_RadioButton"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/category_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryShopping_RadioButton"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/category_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryOther_RadioButton"
                android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="@string/task_list_add_button"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:id="@+id/addTask_Button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/cancel_Button"/>
    <Button
            android:text="@string/new_task_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>